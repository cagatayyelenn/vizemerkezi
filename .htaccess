RewriteEngine On

# Redirect .html to non-html
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

# Internally rewrite non-html to .html
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L,QSA]

# Rewrite /ulke/code to ulke-detay.html
RewriteRule ^ulke/([a-zA-Z0-9-]+)$ ulke-detay.html [L,QSA]

# Rewrite /hizmet/code to hizmet-detay.html
RewriteRule ^hizmet/([a-zA-Z0-9-]+)$ hizmet-detay.html [L,QSA]
